proceed = True
while proceed == True:
    pswrd = input('Please choose a password: ')
    if 8 <= len(pswrd) <= 12:
        pswrd2 = input('Please retype your new password for confirmation: ')
        if pswrd == pswrd2:
            print('Thank you. Your password has been set.')
            break
        else:
            print('Your passwords do not match. Please try again.')
    else:
        print('Error: Your password must be between 8-12 characters. Please try again.')
        continue
